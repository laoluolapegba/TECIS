@model IEnumerable<TECIS.Data.Models.GuestContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="ibox-content">
    <div class="panel-heading">
        <strong>Guest Contact History</strong>
    </div>
    <div class="table-responsive" >
    <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.contact_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contacted_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestCluster.ClusterName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.guest_firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guest_lastname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WouldJoin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasChurch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forgetme)
            </th>
            
             <th>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "CreateNew", "GuestContact", htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
            </th>
        </tr>
            </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.contact_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contacted_by)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestCluster.ClusterName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.guest_firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.guest_lastname)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.WouldJoin)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.HasChurch)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Forgetme)
                </td>
                <td>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "GuestContact", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "GuestContact", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                    </div>
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
                            <tr>
                                <th>-</th>
                                <th>-</th>
                                <th>footer</th>
                                <th>-</th>  
                                <th>-</th>  
                                <th>-</th>  
                                <th>-</th>  
                                <th>-</th>  
                                <th>-</th>                               
                            </tr>
                        </tfoot>
    </table>                    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")

    
}



