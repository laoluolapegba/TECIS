                @Html.LabelFor(model => model.guest_firstname, new { @class = "control-label col-md-2" })
                @Html.Kendo().TextBoxFor(model => model.guest_firstname)
                @Html.ValidationMessageFor(model => model.guest_firstname)
                
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.guest_lastname, new { @class = "control-label col-md-2" })
                 @Html.Kendo().TextBoxFor(model => model.guest_lastname)
                @Html.ValidationMessageFor(model => model.guest_lastname)
                
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.WouldJoin, new { @class = "control-label col-md-2" })
                 @Html.Kendo().CheckBoxFor(model => model.WouldJoin)
                @Html.ValidationMessageFor(model => model.WouldJoin)
                
