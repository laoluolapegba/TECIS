@using TECIS.Web
@model IEnumerable<TECIS.Data.Models.GuestContact>


 <div class="ibox-content">
    <div class="panel-heading">
        <strong>Guest Contact History</strong>
    </div>

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.contact_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.contacted_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestCluster.ClusterName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.guest_firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guest_lastname)
            </th>


            <th>
                @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-plus'></span>", "Add", "Create", "GuestContact", routeValues: new { GuestId = ViewBag.GuestId }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary pull-right" })
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.contact_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.contacted_by)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GuestCluster.ClusterName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.guest_firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.guest_lastname)
                </td>


                <td>
                    <div class="pull-right">
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "GuestContact", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                        &nbsp;
                        @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "GuestContact", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })

                    </div>
                </td>
            </tr>
        }

    </table>


</div>


