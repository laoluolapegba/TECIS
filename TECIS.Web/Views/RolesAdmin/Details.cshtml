@model TECIS.Data.Identity.ApplicationRole
    @*Microsoft.AspNet.Identity.EntityFramework.IdentityRole*@

@{
    ViewBag.Title = "Details";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Details</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("List", "Index")
            </li>
            <li class="active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Details Role</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                    </dl>


                </div>
                <h4>List of users in this role</h4>
                @if (ViewBag.UserCount == 0)
                {
                    <hr />
                    <p>No users found in this role.</p>
                }

                <table class="table table-striped">

                    @foreach (var item in ViewBag.Users)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.Firstname
                            </td>
                            <td>
                                @item.Lastname
                            </td>
                        </tr>

                    }
                </table>
            </div>
        </div>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-white" })


    </div>
</div>





